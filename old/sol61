perl -e 'sub polyn{return $_[0]*(($_[1]-2)*$_[0]+4-$_[1])/2}for$s(3..8){$ip[$s-3]=[];for(1..1000){$p=polyn($_,$s);next if$p<1000;last if$p>=10000;print"$s:$p\n";$p[$s-3]=$p;$ip[$s-3][int($p/100)]||=[];push@{$ip[$s-3][int($p/100)]},sprintf("%02i",$p%100)}}sub sel{print"sel(@{$_[0]},@{$_[1]},@{$_[2]})\n";my@a=@{$_[0]};my@b=@{$_[1]};my@c=@{$_[2]};if(@a==0){for my$b(@b){if($b==$c[0]){my@c=(@c,$b);my$t=0;$t+=$c[$_]*100+$c[$_+1]for(0..5);print"RES:@c -> $t\n"}}return}for my$a(0..$#a){my$t=[@a[0..$a-1,$a+1..$#a]];for my$b(@b){sel($t,$ip[$a[$a]][$b],[@c,$b])if$ip[$a[$a]][$b]}}}sel([0..5],[0..99],[])'|grep RES
