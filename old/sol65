perl -e 'sub bigf{for my$v(0..$#{$_[0]}){if($_[0][$v]>=1000){$o=int($_[0][$v]/1000);$_[0][$v+1]+=$o;$_[0][$v]%=1000}}}sub bigm{my$n=[map{$_[1]*$_}@{$_[0]}];bigf($n);return$n}sub biga{my$l=@{$_[0]}>@{$_[1]}?@{$_[0]}:@{$_[1]};my$n=[];for(0..$l-1){$n->[$_]=$_[0][$_]+$_[1][$_]}bigf($n);return$n}@a=(2);for(1..100){push@a,(1,2*$_,1)}my$l=99;$n=[$a[$l]];$d=[1];for(0..$l-1){print"@$n/@$d $a[$i]\n";$i=$l-$_-1;$nn=biga($d,bigm($n,$a[$i]));$d=$n;$n=$nn}$t=0;$t+=$_ for(split//,join"",@$n);print"$t:@$n/@$d\n"'
